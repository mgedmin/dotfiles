# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.

[general]
##accounts = Work, Home, Vartai
##accounts = Work, Home
accounts = Home
##ui = Curses.Blinkenlights
##ui = TTY.TTYUI
# "WARNING:root:Using old interface name, consider using one of machineui, blinkenlights, quiet, ttyui, basic"
ui = ttyui

pythonfile = ~/.offlineimap.py

maxsyncaccounts = 2
maxconnections = 1

[mbnames]
enabled = no
filename = ~/.mutt/muttrc.mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account Work]
localrepository = Work
remoterepository = Fridge

[Account Home]
localrepository = Home
remoterepository = Musmire

##[Account Vartai]
##localrepository = Vartai
##remoterepository = VartaiB4netLt

[Repository Work]
type = Maildir
localfolders = ~/Mail/Work

[Repository Home]
type = Maildir
localfolders = ~/Mail/Home

##[Repository Vartai]
##type = Maildir
##localfolders = ~/Mail/Vartai

[Repository Fridge]
type = IMAP
ssl = yes
remotehost = fridge.pov.lt
remoteuser = mg
preauthtunnel = ssh -q fridge /usr/lib/dovecot/imap
folderfilter = lambda foldername: foldername not in ['spamlock', 'hamlock', 'IN.SPAM']
foldersort = mycmp

[Repository Musmire]
type = IMAP
ssl = yes
remotehost = plato.gedmin.as
remoteuser = mg
preauthtunnel = ssh -q plato /usr/lib/dovecot/imap
#folderfilter = lambda foldername: foldername not in ['IN.root']
foldersort = mycmp

