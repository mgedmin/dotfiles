# Word
application/msword; catdoc -d utf-8 %s; copiousoutput
application/vnd.openxmlformats-officedocument.wordprocessingml.documen; docx2txt '%s' -; copiousoutput

# pdf -- mutt always uses the first one for <enter> in attachment list; and copiousoutput for auto_view
application/pdf; evince '%s'; test=test -n "$DISPLAY"
application/pdf; pdftotext -layout '%s' -; copiousoutput; print=evince %s

# Images
image/*; eog '%s'; test=test -n "$DISPLAY" && test -x /usr/bin/eog
image/*; gqview %s; test=test -n "$DISPLAY" && test -x /usr/bin/gqview

# HTML
text/html; /usr/bin/links '%s'; needsterminal; description=HTML Text; nametemplate=%s.html
##text/html; /usr/bin/links -dump '%s'; copiousoutput; description=HTML Text; nametemplate=%s.html

# from http://wiki.mutt.org/?MuttFaq/Charset
text/html; /usr/bin/w3m -dump -T text/html -I %{charset}; copiousoutput; description=HTML Text

# ZIP
application/x-zip-compressed; unzip -l %s; copiousoutput
application/zip; unzip -l %s; copiousoutput

# RAR
application/rar; rar l %s; copiousoutput
